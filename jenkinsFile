pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from version control
                git 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Execute Bash Script') {
            steps {
                // Execute the Bash script
                sh 'bash ls_script.sh'
            }
        }
    }
}
